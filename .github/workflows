name: CD - Despliegue a Render

on:
  push:
    branches: [ "main" ]
    paths:
      - 'botiqueOnline/**' # Solo se activa si modificas el código Java
      - '.github/workflows/cd-render.yml'

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write # Permiso para subir la imagen a GitHub

    steps:
      # 1. Descargar tu código en el servidor de GitHub
      - name: Checkout del código
        uses: actions/checkout@v4

      # 2. Instalar Java 21 para poder compilar
      - name: Configurar Java 21
        uses: actions/setup-java@v4
        with:
          java-version: '21'
          distribution: 'temurin'
          cache: maven

      # 3. Compilar el proyecto y crear el .jar (sin correr tests)
      - name: Construir JAR con Maven
        working-directory: ./botiqueOnline
        run: mvn clean package -DskipTests

      # 4. Iniciar sesión en el registro de imágenes de GitHub
      - name: Login en GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      # 5. Preparar los nombres y etiquetas para la imagen
      - name: Extraer metadatos
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: type=raw,value=latest

      # 6. Construir la imagen Docker y subirla a la nube
      - name: Construir y subir imagen
        uses: docker/build-push-action@v5
        with:
          context: ./botiqueOnline
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}

      # 7. Avisar a Render que hay una nueva versión
      - name: Desplegar en Render
        run: curl "${{ secrets.RENDER_DEPLOY_HOOK_URL }}"